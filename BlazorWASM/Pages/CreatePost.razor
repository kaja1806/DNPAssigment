@page "/CreatePost"
@using HttpClients.ClientInterfaces

@using global::Shared.DTOs

@inject IPostService PostService
@inject NavigationManager navMgr

 <div class="card">
   <h5>Create Post</h5>
     <div class="form-group field">
         <label>Title:</label>
         <input type="text" @bind="postTitle" @bind:event="oninput"/> 
         @if (!string.IsNullOrEmpty(msg))
                {
                    <label style="color: @color">@msg</label>
                }
     
         </div>
        

    <div class="form-group field">
         <label>Text:</label>
        <textarea rows="5" @bind="postText"></textarea>
    </div>

     
     <div class="button-row">
         <button @onclick="Create" disabled="@(string.IsNullOrEmpty(postTitle))" class="acceptbtn">Post</button>
     
     </div>
     
   
 </div>

@code {
    
   
    private string postTitle = ""; //
    private string postText = ""; //
    private string msg = "";
    private string color = "";

   
    private async Task Create()
    {
    
        msg = "";
       
        try
        {
 
            await PostService.CreateAsync(new PostCreationDto(postTitle)); 
            postTitle = "";
            msg = "Title successfully created";
            color = "green";
        }
        
        catch (Exception e)
        {
            Console.WriteLine(e);
            msg = e.Message;
            color = "red";
        }
        
        /*if (string.IsNullOrEmpty(postTitle))//
        {
            msg = "Title cannot be empty!";
            return;
        }*/

     
    }
}


