@using BlazorWasm.Services
@using BlazorWasm.Services
@namespace Login
@inject NavigationManager NavMgr
@inject IAuthService AuthService

<AuthorizeView>
    <Authorized>
        <img class="icon" src="Logout.png" @onclick="Logout" alt=""/>
    </Authorized>
    <NotAuthorized>
        <img class="icon" src="Login.png" @onclick="Login" alt=""/>
    </NotAuthorized>
</AuthorizeView>

@code {

    private void Login()
    {
        NavMgr.NavigateTo("/Login");
    }

    private async Task Logout()
    {
        await AuthService.LogoutAsync();
        NavMgr.NavigateTo("/");
    }

}